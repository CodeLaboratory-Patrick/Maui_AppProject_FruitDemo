<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FruitDemo.MainPage">
    
    <ContentPage.Background>
        <LinearGradientBrush EndPoint="0,1">
            <GradientStop Offset="0.1" Color="#FFCC33" />
            <GradientStop Offset="1.0" Color="#FCBC03" />
        </LinearGradientBrush>
    </ContentPage.Background>
    
    <Grid Margin="25" RowDefinitions=".2*, .4*, .4*">
        <Image Grid.RowSpan="3"
               HorizontalOptions="Center"
               Source="{Binding papaya.png}"
               VerticalOptions="Center" />
        
        <VerticalStackLayout>
            <Label FontFamily="Regular"
                   FontSize="45"
                   HorizontalOptions="Center"
                   Text="PAPAYA" />
            <Label Margin="0,15,0,0"
                   FontAttributes="Bold"
                   FontFamily="Bold"
                   FontSize="20"
                   HorizontalOptions="Center"
                   Text="100 grams" />
        </VerticalStackLayout>
    </Grid>
    
</ContentPage>
